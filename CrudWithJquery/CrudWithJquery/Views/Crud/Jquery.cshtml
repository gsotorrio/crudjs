<h2>Create Players</h2>
<form class="Contenedor">
    <p>
        <label class="sideForm" for="">Name:</label>
        <input id="name" type="text" name="name">
    </p>

    <p>
        <label class="sideForm" for="">Surname:</label>
        <input id="surname" type="text" name="surname">
    </p>

    <p>
        <label class="sideForm" for="">Position:</label>
        <input id="position" type="text" name="position">
    </p>

    <p>
        <label class="sideForm" for="">Strong Leg:</label>
        <input id="strongLeg" type="text" name="strongLeg">
    </p>

    <p>
        <label class="sideForm" for="">Age:</label>
        <input id="age" type="text" name="age">
    </p>

    <p>
        <label class="sideForm" for="">Number:</label>
        <input id="number" type="text" name="number">
    </p>
    <br />
    <input id="create" type="button" value="Save" class="button">
    <input id="clean" type="button" value="Cancel" class="button">
    <input id="update" type="button" value="Update">
</form>
 

